<?xml version='1.0'?>
<robot name="shelfino">

<!--
                                                      MATERIALS 
-->
  <material name="black">
      <color rgba="0.0 0.0 0.0 1.0"/>
  </material>

  <material name="dark">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>

  <material name="light_black">
    <color rgba="0.4 0.4 0.4 1.0"/>
  </material>

  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>

  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>

  <material name="grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <material name="orange">
    <color rgba="1.0 0.4235 0.0392 1.0"/>
  </material>

  <material name="brown">
    <color rgba="0.8706 0.8118 0.7647 1.0"/>
  </material>

  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>

  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

<!--
                                                      BODY OF SHELFINO 
-->
  <link name='base_link'>
    <visual name='body_visual'>
      <origin xyz='0 0 .25'/>
      <geometry>
        <box size=".5 .5 .4" />
      </geometry>
      <material name="white" />
    </visual>

    <visual name='front_caster_visual'>
      <origin xyz='-0.2 0 0.05'/>
      <geometry>
        <sphere radius=".05" />
      </geometry>
      <material name="gray" />
    </visual>

    <visual name='back_caster_visual'>
      <origin xyz='0.2 0 0.05'/>
      <geometry>
        <sphere radius=".05" />
      </geometry>
      <material name="gray" />
    </visual>

    <collision name='collision'>
      <origin xyz='0 0 .225'/>
      <geometry>
        <box size=".5 .5 .45" />
      </geometry>
    </collision>
  </link>

<!--
                                                      LEFT WHEEL JOINT 
-->
  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.27 0.125" rpy="0 1.5707 1.5707"/>
    <axis xyz="0 0 1"/>
  </joint>

<!--
                                                      LEFT WHEEL
-->
  <link name="left_wheel">
    <visual name="visual">
      <geometry>
       <cylinder radius="0.125" length="0.03" />
      </geometry>
      <material name="black" />
    </visual>
    
    <collision name="collision">
      <geometry>
        <cylinder radius="0.125" length="0.03" />
      </geometry>
    </collision>

    <inertial>
      <mass value="2.8498940e-02" />
      <inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
               iyy="1.1192413e-05" iyz="-1.4400107e-11"
               izz="2.0712558e-05" />
    </inertial>
  </link>

<!--
                                                      RIGHT WHEEL JOINT 
-->
  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.27 0.125" rpy="0 1.5707 1.5707"/> 
    <axis xyz="0 0 1"/>
  </joint>

<!--
                                                      RIGHT WHEEL 
-->
  <link name="right_wheel">
    <visual name="visual">
      <geometry>
        <cylinder radius="0.125" length="0.03" />
      </geometry>
      <material name="black" />
    </visual>

    <collision name="collision">
      <geometry>
        <cylinder radius="0.125" length="0.03" />
      </geometry>
    </collision>

    <inertial>
      <mass value="2.8498940e-02" />
      <inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
               iyy="1.1192413e-05" iyz="-1.4400107e-11"
               izz="2.0712558e-05" />
    </inertial>
  </link>

<!--
                                                      LIDAR FIXED JOINT 
-->
  <joint name="lidar2d_joint" type="fixed">
    <parent link="base_link"></parent>
    <child link="base_laser"></child>
    <origin xyz="0 0 0.45" rpy="0 0 0"/>
  </joint>

<!--
                                                      LIDAR 
-->
  <link name="base_laser">
    <visual>
      <geometry>
        <mesh filename="package://shelfino_gazebo/models/lidar2d/meshes/hokuyo.dae" />
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.02"/>
      <geometry>
        <cylinder length="0.04" radius="0.023"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.1" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

</robot>
