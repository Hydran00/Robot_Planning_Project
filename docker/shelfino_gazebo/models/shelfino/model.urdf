<?xml version='1.0'?>
<robot name="shelfino">

<!--
                                                      MATERIALS 
-->
  <material name="blue">
    <color rgba="0.15 0.15 0.85 1"/>
  </material>

  <material name="blue1">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="gray">
    <color rgba="0.15 0.15 0.15 1"/>
  </material>

  <material name="black">
    <color rgba="0.01 0.01 0.01 1"/>
  </material>

<!--
                                                      BODY OF SHELFINO 
-->
  <link name='base_link'>
    <origin rpy='0 0 0' xyz='0 0 .25'/>
  
    <visual name='visual'>
      <origin xyz="0 0 .25"/>
      <geometry>
        <box size=".5 .5 .4" />
      </geometry>
      <material name="blue" />
    </visual>

    <visual name='front_caster_visual'>
      <origin rpy='0 0 0' xyz='-0.2 0 0.05'/>
      <geometry>
        <sphere radius=".05">
        </sphere>
      </geometry>
      <material name="gray" />
    </visual>

    <visual name='back_caster_visual'>
      <origin rpy='0 0 0' xyz='0.2 0 0.05'/>
      <geometry>
        <sphere radius=".05">
        </sphere>
      </geometry>
      <material name="gray" />
    </visual>

    <collision name='collision'>
      <geometry>
        <box size=".5 .5 .4">
        </box>
      </geometry>
    </collision>

    <collision name='front_caster_collision'>
      <origin rpy='0 0 0' xyz='-0.2 0 -0.225'/>
      <geometry>
        <box size=".1 .1 .05">
        </box>
      </geometry>

      <surface>
        <friction>
          <ode>
            <mu>0.0</mu>
            <mu2>0.0</mu2>
            <slip1>0.0</slip1>
            <slip2>0.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>
    
    <collision name='back_caster_collision'>
      <origin rpy='0 0 0' xyz='0.2 0 -0.225'/>
      <geometry>
        <box size=".1 .1 .05">
        </box>
      </geometry>

      <surface>
        <friction>
          <ode>
            <mu>0.0</mu>
            <mu2>0.0</mu2>
            <slip1>0.0</slip1>
            <slip2>0.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>
    
  </link>

<!--
                                                      LIDAR FIXED JOINT 
-->
  <joint name="lidar2d_joint" type="fixed">
    <parent link="base_link"></parent>
    <child link="base_laser"></child>
    <origin xyz="0 0 0.45" rpy="0 0 0"/>
  </joint>

<!--
                                                      LIDAR 
-->
  <link name="base_laser">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://shelfino_gazebo/models/lidar2d/meshes/hokuyo.dae" />
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0.015 0 -0.0065" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.0315" radius="0.055"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.1" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

<!--
                                                      LEFT WHEEL JOINT 
-->
  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.27 0.125" rpy="0 1.5707 1.5707"/>
    <axis xyz="0 0 1"/>
  </joint>

<!--
                                                      LEFT WHEEL
-->
  <link name="left_wheel">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="2.8498940e-02" />
      <inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
               iyy="1.1192413e-05" iyz="-1.4400107e-11"
               izz="2.0712558e-05" />
    </inertial>

    <visual name="visual">
      <geometry>
       <cylinder radius="0.125" length="0.03">
        </cylinder>
      </geometry>
      <material name="black" />
    </visual>
    
    <collision name="collision">
      <geometry>
        <cylinder radius="0.125" length="0.03">
        </cylinder>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0.8</mu>
            <mu2>0.8</mu2>
            <slip1>0.0</slip1>
            <slip2>0.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>
  </link>

<!--
                                                      RIGHT WHEEL JOINT 
-->
  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.27 0.125" rpy="0 1.5707 1.5707"/> 
    <axis xyz="0 0 1"/>
  </joint>

<!--
                                                      RIGHT WHEEL 
-->
  <link name="right_wheel">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="2.8498940e-02" />
      <inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
               iyy="1.1192413e-05" iyz="-1.4400107e-11"
               izz="2.0712558e-05" />
    </inertial>

    <visual name="visual">
      <geometry>
        <cylinder radius="0.125" length="0.03">
        </cylinder>
      </geometry>
      <material name="black" />
    </visual>

    <collision name="collision">
      <geometry>
        <cylinder radius="0.125" length="0.03">
        </cylinder>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0.8</mu>
            <mu2>0.8</mu2>
            <slip1>0.0</slip1>
            <slip2>0.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>
  </link>

</robot>
