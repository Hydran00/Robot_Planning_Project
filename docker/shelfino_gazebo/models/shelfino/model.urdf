<?xml version='1.0'?>
<robot name="shelfino">

<!--
                                                      MATERIALS 
-->
  <material name="black">
      <color rgba="0.0 0.0 0.0 1.0"/>
  </material>

  <material name="dark">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>

  <material name="light_black">
    <color rgba="0.4 0.4 0.4 1.0"/>
  </material>

  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>

  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>

  <material name="grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <material name="orange">
    <color rgba="1.0 0.4235 0.0392 1.0"/>
  </material>

  <material name="brown">
    <color rgba="0.8706 0.8118 0.7647 1.0"/>
  </material>

  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>

  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

<!--
                                                      BODY OF SHELFINO 
-->
  <link name='base_link'>
    <visual name='body_visual'>
      <origin xyz='0 0 .25'/>
      <geometry>
        <box size=".5 .5 .4" />
      </geometry>
      <material name="white" />
    </visual>

    <visual name='front_caster_visual'>
      <origin xyz='-0.2 0 0.05'/>
      <geometry>
        <sphere radius=".05" />
      </geometry>
      <material name="gray" />
    </visual>

    <visual name='back_caster_visual'>
      <origin xyz='0.2 0 0.05'/>
      <geometry>
        <sphere radius=".05" />
      </geometry>
      <material name="gray" />
    </visual>

    <collision name='collision'>
      <origin xyz='0 0 .225'/>
      <geometry>
        <box size=".5 .5 .45" />
      </geometry>
    </collision>
  </link>

<!--
                                                      LEFT WHEEL JOINT 
-->
  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.27 0.125" rpy="0 1.5707 1.5707"/>
    <axis xyz="0 0 1"/>
  </joint>

<!--
                                                      LEFT WHEEL
-->
  <link name="left_wheel">
    <visual name="visual">
      <geometry>
       <cylinder radius="0.125" length="0.03" />
      </geometry>
      <material name="black" />
    </visual>
    
    <collision name="collision">
      <geometry>
        <cylinder radius="0.125" length="0.03" />
      </geometry>
    </collision>

    <inertial>
      <mass value="2.8498940e-02" />
      <inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
               iyy="1.1192413e-05" iyz="-1.4400107e-11"
               izz="2.0712558e-05" />
    </inertial>
  </link>

<!--
                                                      RIGHT WHEEL JOINT 
-->
  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.27 0.125" rpy="0 1.5707 1.5707"/> 
    <axis xyz="0 0 1"/>
  </joint>

<!--
                                                      RIGHT WHEEL 
-->
  <link name="right_wheel">
    <visual name="visual">
      <geometry>
        <cylinder radius="0.125" length="0.03" />
      </geometry>
      <material name="black" />
    </visual>

    <collision name="collision">
      <geometry>
        <cylinder radius="0.125" length="0.03" />
      </geometry>
    </collision>

    <inertial>
      <mass value="2.8498940e-02" />
      <inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
               iyy="1.1192413e-05" iyz="-1.4400107e-11"
               izz="2.0712558e-05" />
    </inertial>
  </link>

<!--
                                                      LIDAR FIXED JOINT 
-->
  <joint name="lidar2d_joint" type="fixed">
    <parent link="base_link"></parent>
    <child link="base_laser"></child>
    <origin xyz="0 0 0.51" rpy="0 0 0"/>
  </joint>

<!--
                                                      LIDAR 
-->
  <link name="base_laser">
    <visual>
      <origin xyz="0 0 -0.04"/>
      <geometry>
        <mesh filename="model://lidar2d/meshes/hokuyo.dae" />
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 -0.02"/>
      <geometry>
        <cylinder length="0.04" radius="0.023"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.1" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>


<!--
                                                      DIFFERENTIAL DRIVE CONTROLLER 
-->
  <gazebo>
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <!-- <alwaysOn>true</alwaysOn> -->

      <!-- Plugin update rate in Hz -->
      <update_rate>30</update_rate>

      <!-- Name of left joint, defaults to `left_joint` -->
      <left_joint>wheel_left_joint</left_joint>

      <!-- Name of right joint, defaults to `right_joint` -->
      <right_joint>wheel_right_joint</right_joint>

      <!-- The distance from the center of one wheel to the other, in meters, defaults to 0.34 m -->
      <wheel_separation>0.54</wheel_separation>

      <!-- Diameter of the wheels, in meters, defaults to 0.15 m -->
      <wheel_diameter>0.25</wheel_diameter>

      <!-- Wheel acceleration, in rad/s^2, defaults to 0.0 rad/s^2 -->
      <max_wheel_acceleration>1.0</max_wheel_acceleration>

      <!-- Maximum torque which the wheels can produce, in Nm, defaults to 5 Nm -->
      <max_wheel_torque>20</max_wheel_torque>

      <!-- Topic to receive geometry_msgs/Twist message commands, defaults to `cmd_vel` -->
      <command_topic>cmd_vel</command_topic>

      <!-- Topic to publish nav_msgs/Odometry messages, defaults to `odom` -->
      <odometry_topic>odom</odometry_topic>

      <!-- Odometry frame, defaults to `odom` -->
      <odometry_frame>odom</odometry_frame>

      <!-- Robot frame to calculate odometry from, defaults to `base_footprint` -->
      <robot_base_frame>base_link</robot_base_frame>

      <!-- Odometry source, 0 for ENCODER, 1 for WORLD, defaults to WORLD -->
      <odometry_source>1</odometry_source>

      <!-- Set to true to publish transforms for the wheel links, defaults to false -->
      <publish_wheel_tf>false</publish_wheel_tf>

      <!-- Set to true to publish transforms for the odometry, defaults to true -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>

    </plugin>
  </gazebo>

<!--
                                                      JOINT STATE PUBLISHER 
-->
  <gazebo>
    <plugin name="joint_state" filename="libgazebo_ros_joint_state_publisher.so">
      <ros>
        <remapping>~/out:=joint_states</remapping>
      </ros>
      <update_rate>30</update_rate>
      <joint_name>wheel_left_joint</joint_name>
      <joint_name>wheel_right_joint</joint_name>
    </plugin> 
  </gazebo>  

<!--
                                                      LIDAR SENSOR 
-->
  <gazebo reference="base_laser">
    <sensor type="gpu_ray" name="head_hokuyo_sensor">
      <visualize>true</visualize>
      <update_rate>40</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>0</min_angle>
            <max_angle>6.28318530718</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.15</min>
          <max>12.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <!-- Noise parameters based on published spec for Hokuyo laser
               achieving "+-30mm" accuracy at range < 10m.  A mean of 0.0m and
               stddev of 0.01m will put 99.7% of samples within 0.03m of the true
               reading. -->
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_gpu_laser.so">
        <topicName>/scan</topicName>
        <frameName>base_laser</frameName>
      </plugin>
    </sensor>
  </gazebo>

</robot>